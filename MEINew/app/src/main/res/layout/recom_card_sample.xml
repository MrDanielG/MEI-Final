<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_main_1_1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="7dp"
    android:layout_marginEnd="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="1dp"
    android:foreground="?android:attr/selectableItemBackground"
    android:transitionName="recoCard"
    card_view:cardCornerRadius="6dp"
    card_view:cardElevation="3dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img_main_card_1"
            android:layout_width="match_parent"
            android:layout_height="175dp"
            android:layout_alignParentTop="true"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:transitionName="recoImage" />

        <TextView
            android:id="@+id/tv_card_main_1_title"
            style="@style/TextAppearance.AppCompat.Large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/img_main_card_1"
            android:layout_marginEnd="@dimen/card_title_margin"
            android:layout_marginStart="@dimen/card_title_margin"
            android:layout_marginTop="@dimen/card_title_margin_top"
            android:text="Titulo"
            android:textColor="@android:color/black"
            android:transitionName="recoTitle" />

        <TextView
            android:id="@+id/tv_card_main1_sueldo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/tv_card_main_1_title"
            android:layout_below="@+id/tv_card_main_1_title"
            android:text="Salario"
            android:textColor="@android:color/holo_green_dark"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_card_main1_subtitle2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/tv_card_main_1_title"
            android:layout_below="@+id/tv_card_main1_sueldo"
            android:text="Universidad"
            android:transitionName="recoUni" />

        <TextView
            android:id="@+id/tv_card_main1_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/tv_card_main1_subtitle2"
            android:layout_below="@+id/tv_card_main1_subtitle2"
            android:text="Instituto"
            android:transitionName="recoInst" />

        <Button
            android:id="@+id/btn_card_main1_action1"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_card_main1_subtitle"
            android:layout_margin="@dimen/card_button_margin"
            android:text="INFORMACION"
            android:textColor="#ffab40" />

        <Button
            android:id="@+id/btn_card_main1_action2"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_card_main1_subtitle"
            android:layout_marginBottom="@dimen/card_button_margin"
            android:layout_marginTop="@dimen/card_button_margin"
            android:layout_toEndOf="@id/btn_card_main1_action1"
            android:text="UBICACION"
            android:textColor="#ffab40" />

        <ImageView
            android:id="@+id/img_main_card1_favorite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/btn_card_main1_action2"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/btn_card_main1_action2"
            android:layout_marginEnd="8dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:padding="12dp"
            android:src="@drawable/ic_favorite_border" />

    </RelativeLayout>
</android.support.v7.widget.CardView>